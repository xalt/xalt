#!/bin/bash
# -*- shell-script -*-
USER=~mclay
export PATH=$USER/l/pkg/xalt/xalt/bin:$USER/l/pkg/xalt/xalt/sbin:$PATH
WD=$USER/process_xalt/
M=$WD/m
LOG_DIR=/var/log

########################################################################
# Build host list on this VM
syshostA=()
CWD=$PWD
cd $M
for i in *; do
  syshostA+=($i)
done
cd $CWD

SYSLOG_TO_DB=$USER/l/pkg/xalt/xalt/sbin/xalt_syslog_to_db.py

errMsg=""
store_xalt_data ()
{
    clusterName=$1
    CN=$M/$clusterName
    for log in $LOG_DIR/xalt_${clusterName}.log-*; do
        if [ -f $log ]; then
           echo python3 $SYSLOG_TO_DB --syslog $log --syshost $clusterName --reverseMapD $CN/reverseMapD --u2acct $CN/u2acct.json --leftover $CN/leftover.log --confFn $CN/xalt_${clusterName}_db.conf
                python3 $SYSLOG_TO_DB --syslog $log --syshost $clusterName --reverseMapD $CN/reverseMapD --u2acct $CN/u2acct.json --leftover $CN/leftover.log --confFn $CN/xalt_${clusterName}_db.conf
           status=$?
           echo ""
           echo "date: $(date)"
           if [ $status != 0 ]; then
              errMsg="$errMsg\nProblem with XALT ingestion on $clusterName for $log"
           else
              rm $log
           fi 
        fi
    done
}

manager ()
{
   echo "========================================================================"
   XALT_EXECUTABLE_TRACKING=yes LD_PRELOAD= xalt_configuration_report --git_version
   echo "========================================================================"

   echo ""
   echo "Start Date: $(date)"
   for i in "${syshostA[@]}" ; do
     store_xalt_data $i
   done
   echo "End Date: $(date)"
   echo ""
}



store_log="$WD/Store.log-$(date +%Y-%m-%d)"

touch $store_log
chmod 644 $store_log

manager 2>&1 | tee $store_log 

find $WD -name 'Store.log-*' -ctime +30 -exec rm -f {} \;

if [ -n "$errMsg" ]; then
  echo -e "$errMsg\n" | mail -s "XALT VM: Problem with XALT ingestion" $USER@tacc.utexas.edu > /dev/null
fi

percentage=$(df $LOG_DIR | tail -n 1 | awk '{print $5}' | sed -e 's/%//')
if [ "$percentage" -gt 90 ]; then
   mail -s 'LOG disk > 90% on xalt VM' $USER@tacc.utexas.edu < /dev/null > /dev/null
fi

