Bootstrap: docker
From: ubuntu:16.04
Stage: spython-base

%post

mkdir -p /app
cd /app

apt-get update && \
apt-get install -y git gcc build-essential flex bc libssl-dev python3  && \
apt-get install -y libelf-dev uuid-dev libcurl4-openssl-dev            && \
git clone https://github.com/xalt/xalt.git  && \
cd  xalt                                    && \
git checkout @GIT_BRANCH@                   && \
mkdir ./my_build                            && \
cd    ./my_build                            && \
../configure --prefix=/opt --with-syshostConfig=@SYSHOST_CONFIG@ --with-config=@XALT_CONFIG_PY@ --with-transmission=@TRANSMISSION@ --with-MySQL=no && \
make GIT_VERSION=xalt-3.1.4 install
    
    
%runscript
mkdir -p /work
cd /opt/xalt/xalt && tar czf /work/xalt_libs.tgz lib lib64

%startscript
